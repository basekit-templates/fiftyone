{% extends "layout.twig" %}

{% block content %}

<div id="page">
    
    <header class="sidebar">
        <div class="sidebarwrap">
        {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
        {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
        {{widget('extendednavigation', 'navigationheader', {})|raw}}
        <footer>
            <div class="addressicons">
                {{widget('profile', 'footercolumn1profileaddress', { 'profileType':'address', 'address':'profile'})|raw}} 
                {{widget('profile', 'footercolumn1profilesocialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
            </div>          
                {{widget('profile', 'footercolumn1profilecopyright', { 'profileType':'copyright', 'copyright':'profile'})|raw}}
            </div>
        </footer>
    </header>

    <div class="main">
        <section>
            {{widget('feature', 'featurehome', {"header": "profile", "strapline":"profile", "buttonText":"Lorem Ipsum","defaultBgImg": asset('images/feature-bg.jpg'), 'positionTopPercentage': '0','showBtn': true})|raw}}
        </section>
        <div class="zone wrapper">
            {{zone('main')|raw}}
        </div>
    </div>

</div>

{% endblock %}
